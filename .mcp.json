{
  "mcpServers": {
    "sequential-thinking": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "ref-mcp": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "ref-tools-mcp"
      ],
      "env": {}
    },
    "semgrep": {
      "command": "uvx",
      "args": [
        "semgrep-mcp"
      ],
      "env": {
        "SEMGREP_APP_TOKEN": "<optional-token>"
      }
    },
    "exa-search": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "8c348630-04d0-4e19-b73b-61d0677979a9"
      }
    },
    "playwright-mcp": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@playwright/mcp@latest",
        "--output-dir",
        "./"
      ],
      "env": {}
    }
  }
}